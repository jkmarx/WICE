<%=form_for [@user, @recipe], :html =>{ :multipart =>true } do |f| %>
  <div class='field'>
    <%=f.label :title %><br>
    <%=f.text_field :title %>
  </div>

  <div class='field'>
    <%=f.label :category %><br>
    <%=f.select :category, %w{ appetizers breakfast dessert entree salads side_dishes snacks soup other }, :prompt=>'Food Category', :size=>50 %>
  </div>

  <div class='field'>
    <%=f.label :ingredients %><br>
    <%=f.text_area :ingredients, placeholder: "Please seperate ingredients with a , (comma). Example: 1 cup sugar, 2 tbs corn starch, 2 cups flour",cols:60, rows:4%>
  </div>

   <div class='field'>
    <%=f.label :directions %><br>
    <%=f.text_area :directions, placeholder: "Please seperate steps with a number). Example: 1) Preheat oven to 300F. 2) Mix ingredients. 3) Place in oven.", cols:60, rows:6 %>
  </div>
  <strong>Choose a Picture File</strong><br>
   <%= f.file_field :picture %>
   <br>
    <div class="actions">
      <%= f.submit "Save Recipe", class: 'btn btn-primary btn-lg' %>
    </div>

<% end %>
