<div class="row">
<h1> Sign Up </h1>
<div class='signform'>
  <ul>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <li><%= f.label :name %><%= f.text_field :name %></li>

    <li><%= f.label :email %><%= f.email_field :email %></li>
   </ul>
   <ul>
    <li><%= f.label :password %><%= f.password_field :password, placeholder: "Minimum 8 Characters" %></li>

    <li><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "Must Match" %></li>
    </ul>
    <div class:"field_checkbox">
    <% @allergies.each do |allergy| %>
        <%= check_box_tag "user[allergy_ids][]", allergy.id %>
        <%= allergy.name %>
    <% end %>
    <%= f.submit "Sign up", class: 'btn btn-default btn-md' %>
    </div>
  <% end %>
  </div>
